@page
@model EduToyRentalPlatform.Pages.Cart.CheckoutModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<tbody>
    @if (Model.CartItems != null)
    {
        foreach (var item in Model.CartItems)
        {
            <tr>
                <td>
                    <!-- Replace with an actual image URL if available -->
                    <img src="@item.Toy.ToyImg" alt="product-img" class="avatar-lg rounded">
                </td>
                <td>
                    <h5 class="font-size-16">
                        <a href="#" class="text-dark">@item.Toy.ToyName</a>
                    </h5>
                    <p class="text-muted mb-0 mt-1">@item.Toy.ToyPriceSale x @item.Quantity</p>
                </td>
                <td>@(item.Toy.ToyPriceSale * item.Quantity)</td>
            </tr>
        }
    }
    <tr class="bg-light">
        <td colspan="2">Total:</td>
        <td>@Model.CartItems.Sum(item => item.Toy.ToyPriceSale * item.Quantity)</td>
    </tr>
    <div class="mt-4">
        <h5 class="font-size-16 mb-3">Select Payment Method:</h5>
        <form method="post" >
            <button type="submit" name="paymentMethod" value="VNPay" class="btn btn-primary mb-2">Thanh toán VNPAY</button>
            <button type="submit" name="paymentMethod" value="Wallet" class="btn btn-secondary mb-2">Thanh toán ví</button>
            <button type="submit" name="paymentMethod" value="Direct" class="btn btn-success">Thanh toán trực tiếp</button>
        </form>
    </div>
</tbody>
