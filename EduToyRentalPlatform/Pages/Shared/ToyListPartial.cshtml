@model List<ToyShop.ModelViews.ToyModelViews.ResponeToyModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@if (Model != null && Model.Count > 0)
{
    @foreach (var toy in Model)
    {
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="rounded position-relative fruite-item">
                <!-- Toy Image -->
                <div class="fruite-img">
                    <img src="@Url.Content("~/img/" + toy.ToyImg)" class="img-fluid custom-img w-100 rounded-top" alt="@toy.ToyName">
                </div>
                <!-- Shop Badge -->
                <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">ToyShop</div>
                <!-- Card Body -->
                <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                    <!-- Toy Details -->
                    <h4 class="text-truncate" title="@toy.ToyName">@toy.ToyName</h4>
                    <p>@(toy.ToyDescription?.Length > 50 ? toy.ToyDescription.Substring(0, 50) + "..." : toy.ToyDescription)</p>
                    <p class="text-dark fs-5 fw-bold mb-0">Buy: @toy.ToyPriceSale.ToString("N0") VND</p>
                    <p class="text-dark fs-5 fw-bold mb-0">Rent: @toy.ToyPriceRent.ToString("N0") VND</p>

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between align-items-center">
                        <!-- Add to Cart Button -->
                        <form method="post" asp-page="/Shop" asp-page-handler="AddToCart" class="d-inline-block">
                            <input type="hidden" name="ToyId" value="@toy.Id" />
                            <input type="hidden" name="Quantity" value="1" />
                            <button type="submit" class="btn btn-outline-success btn-sm rounded-pill">
                                <i class="fa fa-shopping-bag me-2"></i> Thêm vào giỏ
                            </button>
                        </form>
                        <!-- View Details Button -->
                        <a href="@Url.Page("./ShopDetail", new { id = toy.Id })" class="btn btn-outline-primary btn-sm rounded-pill">
                            <i class="fa fa-info-circle me-2"></i> Chi tiết
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
}
