@page
@model ToyShop.Pages.Account.LoginPageModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="login-container">
    <h2>@ViewData["Title"]</h2>

    <form method="post" asp-page-handler="OnPostAsync">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label asp-for="Email" class="control-label">Tài khoản</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="control-label">Mật khẩu</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group form-check">
            <input asp-for="RememberMe" class="form-check-input" id="rememberMe" />
            <label asp-for="RememberMe" class="form-check-label" for="rememberMe">Bạn muốn nhớ mật khẩu?</label>
        </div>


        <button type="submit" class="btn btn-primary">Đăng nhập</button>
    </form>

    <div class="form-group">
        <p class="text-center">
            Chưa có tài khoản? <a href="/Account/RegisterPage" class="btn btn-link">Đăng ký ngay</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Đặt nền màu xanh lá */
    body {
        background-color: #2ecc71; /* Màu xanh lá */
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }
    /* Căn giữa form */
    .login-container {
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
    }
    /* Thiết kế label */
    label {
        font-weight: bold;
        margin-bottom: 5px;
    }
    /* Thiết kế form-control */
    .form-control {
        margin-bottom: 15px;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        width: 100%;
    }
    /* Thiết kế button */
    .btn-primary {
        width: 100%;
        padding: 10px;
        background-color: #3498db;
        border: none;
        color: white;
        font-size: 16px;
        cursor: pointer;
    }

    .form-check-input {
        width: 20px; /* Chiều rộng của checkbox */
        height: 20px; /* Chiều cao của checkbox */
        margin-right: 10px; /* Khoảng cách bên phải checkbox */
    }

    /* Thiết kế label */
    .form-check-label {
        font-weight: bold;
        margin-left: 5px; /* Khoảng cách bên trái cho label */
    }


    .btn-primary:hover {
        background-color: #2980b9;
    }
</style>
