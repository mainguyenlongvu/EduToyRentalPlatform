@page
@model EduToyRentalPlatform.Pages.Account.ForgetPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}
<div class="register-container">
    <h2>@ViewData["Title"]</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div id="error-message" class="alert alert-danger text-center" style="color:red; margin-bottom: 15px;">
            @Model.ErrorMessage
        </div>
    }
    <form method="post" asp-page-handler="OnPost" enctype="multipart/form-data">
        <!-- Note: enctype added here -->
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label for="Email" class="control-label">Tài khoản</label>
            <input type="email" name="Email" class="form-control" />
            <span style="float: right;margin-top: -15px">@Html.ValidationMessage("Email", "", new { @class = "text-danger" })</span>
        </div>

        <button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
    </form>

    <div class="form-group">
        <p class="text-center">
            <a href="/Account/LoginPage" class="btn btn-link">Đăng Nhập</a>
        </p>
        <p class="text-center">
            <a href="/Account/RegisterPage" class="btn btn-link">Đăng Kí</a>
        </p>
        <p class="text-center">
            <a href="/Account/ChangePasswordPage" class="btn btn-link">Đổi mật khẩu</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-image: url('https://wallpaperaccess.com/full/1804535.jpg'); /* Path to your image */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        position: relative;
        margin: 0;
        height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1;
        }

    .register-container {
        z-index: 2;
        position: relative;
        background-color: rgba(255, 255, 255, 0.9); /* Slightly transparent white */
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0px 6px 12px rgba(0, 0, 0, 0.15);
        width: 100%;
        max-width: 420px;
    }

        .register-container:hover {
            transform: scale(1.02);
        }

    label {
        font-weight: bold;
        margin-bottom: 5px;
    }

    .form-control {
        margin-bottom: 15px;
        padding: 12px;
        border-radius: 5px;
        border: 1px solid #ccc;
        width: 100%;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: rgb(129, 196, 8); /* Use your specified color */
            outline: none;
            box-shadow: 0 0 5px rgba(129, 196, 8, 0.5); /* Use your specified color */
        }

    .btn-primary {
        width: 100%;
        padding: 12px;
        background-color: rgb(129, 196, 8); /* Use your specified color */
        border: none;
        color: white;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: rgb(102, 147, 6); /* Darker shade for hover effect */
        }

    .btn-link {
        color: rgb(129, 196, 8); /* Use your specified color */
    }

        .btn-link:hover {
            text-decoration: underline;
        }

    /* Additional styles for the new classes */
    .font-bold {
        font-weight: bold; /* Make text bold */
    }

    .no-underline {
        text-decoration: none; /* Remove underline */
        color: rgb(129, 196, 8); /* Use your specified color */
    }

        .no-underline:hover {
            text-decoration: underline; /* Optional: add underline on hover for better UX */
        }
</style>
