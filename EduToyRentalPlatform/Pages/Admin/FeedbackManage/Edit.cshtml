@page "{id?}"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model EduToyRentalPlatform.Pages.Admin.FeedbackManage.EditModel
@{
    ViewData["Title"] = "Edit FeedBack";
    Layout = "~/Pages/Admin/Shared/_Layout.cshtml";
}

<div class="container d-flex justify-content-center align-items-center">
    <form method="post" class="row shadow rounded p-3">
        <input type="hidden" asp-for="Feedback.Id" />
        <input type="hidden" asp-for="Feedback.UserId" />
        <input type="hidden" asp-for="Feedback.ToyId" />

        <div class="mb-3">
            <label for="Content" class="form-label">Content:</label>
            <textarea asp-for="@Model.Feedback.Content" class="form-control" rows="4" required></textarea>
            <span asp-validation-for="@Model.Feedback.Content" class="text-danger"></span>
        </div>

        <div class="mb-3 d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>



