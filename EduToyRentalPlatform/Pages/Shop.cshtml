@page
@model ToyShop.Pages.ShopModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <h1 class="mb-4">PRODUCTS</h1>
        <div class="row g-4">
            <div class="col-lg-12">
                <div class="row g-4">
                    <div class="col-xl-3">
                        <div class="input-group w-100 mx-auto d-flex">
                            <form method="get" asp-page-handler="Search" class="d-flex">
                                <input type="search" class="form-control p-3" placeholder="keywords" aria-describedby="search-icon-1">
                                <span id="search-icon-1" class="input-group-text p-3"><i class="fa fa-search"></i></span>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="row g-4">
                    <div class="row g-4">
                        <!-- Load danh sách đồ chơi từ ToyListPartial -->
                        @await Html.PartialAsync("~/Pages/Shared/ToyListPartial.cshtml", Model.Toys)
                    </div>

                    <div class="col-12">
                        <div class="pagination d-flex justify-content-center mt-5">
                            <!-- Previous Page Link -->
                            <a asp-page="Shop" asp-route-pageNumber="@(Model.PageNumber - 1)" class="rounded"
                            @(Model.PageNumber == 1 ? "style='pointer-events:none; opacity:0.5;'" : "")>&laquo;</a>

                            <!-- Loop through pages -->
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <a asp-page="Shop" asp-route-pageNumber="@i"
                                   class="rounded @(Model.PageNumber == i ? "active" : "")">@i</a>
                            }

                            <!-- Next Page Link -->
                            <a asp-page="Shop" asp-route-pageNumber="@(Model.PageNumber + 1)" class="rounded"
                            @(Model.PageNumber == Model.TotalPages ? "style='pointer-events:none; opacity:0.5;'" : "")>&raquo;</a>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
</div>
